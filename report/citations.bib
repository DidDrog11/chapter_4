	shortjournal = {International Journal of Infectious Diseases},
	author = {Jetoh, Ralph Weah and Malik, Shruti and Shobayo, Bode and Taweh, Fahn and Yeabah, Trokon Omarley and George, Josiah and Gbelee, Burgess and Teahton, Julius and Jaryan, Francis and Tegli, Momo and Umeokonkwo, Chukwuma David and {MaCauley}, Jane},
