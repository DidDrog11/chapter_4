	keywords = {disease transmission, bovine tuberculosis, contact heterogeneity, network modeling, opossum (Didephis virginianus), raccoon (Procyon lotor), white-tailed deer (Odocoileus virginianus), wildlife–livestock interface},
	file = {Full Text PDF:C\:\\Users\\ucbtds4\\Zotero\\storage\\NGH3E4S3\\Wilber et al. - 2019 - Modelling multi-species and multi-mode contact net.pdf:application/pdf;Snapshot:C\:\\Users\\ucbtds4\\Zotero\\storage\\9LE9LHCJ\\1365-2664.html:text/html},
