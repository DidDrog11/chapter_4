	journaltitle = {Journal of Applied Ecology},
	author = {Wilber, Mark Q. and Pepin, Kim M. and Campa {III}, Henry and Hygnstrom, Scott E. and Lavelle, Michael J. and Xifara, Tatiana and {VerCauteren}, Kurt C. and Webb, Colleen T.},
